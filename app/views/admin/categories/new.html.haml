= render 'category_list'

.span8.contentcolumn
  .row-fluid
    .span12
      .well
        .navbar.navbar-heading
          .navbar-inner
            .container{:style => "width: auto;"}
              %a.brand{:href => "#"} New Category
        = simple_form_for [:admin, @category] do |f|
          = f.input :name
          = f.input :parent_id, collection: @categories.without_photos

          .actions
            = f.submit 'Create Category', :class => 'btn btn_primary'

