%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= page_title
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/

    / Styles
    %link{:href => "http://fonts.googleapis.com/css?family=Pacifico",
      :rel => "stylesheet", :type => "text/css"}/

    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

    / HTML5 shim
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>

    - if Rails.env.production?
      = render :partial => 'layouts/ga'
  %body{:class => [controller_name, action_name]}

    .masthead.clearfix
      .container
        .logo.pull-left
          = link_to image_tag('logo.png'), root_path
        .socials.pull-right
          = link_to 'https://www.facebook.com/khouckphoto',
            target: '_blank', rel: 'tooltip-bottom',
            title: 'Find me on Facebook' do
            %i.icon-facebook
          = mail_to 'katie.houck@yahoo.com',
            '<i class="icon-envelope"></i>'.html_safe,
            encode: 'javascript', rel: 'tooltip-bottom',
            title: 'Send me an Email'
        #login.pull-right
          - if current_user && current_user.admin?
            Logged in as <br />
            = link_to current_user.display_name, current_user
        = render 'cart/cart'

    .container

      = error_notice

      = yield
