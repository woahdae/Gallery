%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title Photographer
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/

    / Styles
    %link{:href => "http://fonts.googleapis.com/css?family=Pacifico",
      :rel => "stylesheet", :type => "text/css"}/

    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

    / HTML5 shim
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>

  %body{:class => [controller_name, action_name]}

    .masthead.clearfix
      .container
        .logo.pull-left
          = link_to image_tag('logo.png'), root_path
        .socials.pull-right
          %a{:href  => "https://www.facebook.com/katie.houck",
            :target => '_blank'}
            %i.icon-facebook
          / your facebook link
          %a{:href => "mailto:katie.houck@yahoo.com"}
            %i.icon-envelope
        #login.pull-right
          - if current_user
            Logged in as <br />
            = link_to current_user.display_name, current_user
        = render 'cart/cart'

    .container

      = error_notice

      = yield
